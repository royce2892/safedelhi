<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/display_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/car" >
        </ImageView>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/user_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>
        
         <TextView
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_mail"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="50dp"
            android:text="Name"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>

        <EditText
            android:id="@+id/user_name_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="50dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_gender_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_name_view"
            android:paddingTop="50dp"
            android:text="Gender"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>

        <Spinner
            android:id="@+id/user_gender_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/user_name_view"
            android:paddingTop="50dp" />

        <TextView
            android:id="@+id/user_mail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_gender_view"
            android:paddingTop="50dp"
            android:text="Mail"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>

        <EditText
            android:id="@+id/user_mail_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/user_gender_view"
            android:paddingTop="50dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_mail_view"
            android:paddingTop="50dp"
            android:text="Number"
            android:textColor="#a4c739"
            android:textSize="16sp" >
        </TextView>

        <EditText
            android:id="@+id/user_number_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/user_mail_view"
            android:paddingTop="50dp"
            android:textColor="#000"
            android:inputType="number"
            android:textSize="16sp" />

        <Button
            android:id="@+id/save_user"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@+id/user_number_view"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="#a4c739"
            android:text="@string/save"
            android:textColor="#000"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>